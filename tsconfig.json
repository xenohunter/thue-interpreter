{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": true,
    "isolatedDeclarations": true,
    "noUncheckedIndexedAccess": true,

    "baseUrl": ".",
    "paths": {
      "thue-interpreter": ["./src/index.ts"],
      "thue-interpreter/*": ["./src/*.ts"]
    },
    "outDir": "dist"
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
